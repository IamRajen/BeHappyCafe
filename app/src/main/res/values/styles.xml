<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0b0c10</item>
        <item name="colorPrimaryDark">#1f2833</item>
        <item name="colorAccent">#f00</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="product_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="add_cart">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">Add Cart</item>
        <item name="android:textSize">10dp</item>
        <item name="android:background">#fce301</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:onClick">addToCart</item>
    </style>
    <style name="spinner_choose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
    </style>
    <style name="image_size">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>


</resources>
